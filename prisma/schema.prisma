// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Restaurant {
  id       Int    @id @default(autoincrement())
  name     String @unique
  address  String 
  email    String 
  phone    String
  foodType String

  @@map("restaurants")
}
